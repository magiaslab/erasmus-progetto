---
import Layout from '../../layouts/Layout.astro';
import { client, urlFor, portableTextToHtml } from '../../lib/sanity';
import type { Post } from '../../lib/sanity-types';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await client.fetch<Post[]>(`
    *[_type == "post"] {
      _id,
      title,
      description,
      pubDate,
      heroImage,
      body,
      "slug": slug.current
    }
  `);
  
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: Post;
}

const { post } = Astro.props;
const contentHtml = post.body ? await portableTextToHtml(post.body) : '';
---

<Layout title={post.title} description={post.description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-purple-600 to-purple-800 text-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          {post.title}
        </h1>
        <p class="text-xl text-purple-100 mb-8">
          {post.description}
        </p>
        <div class="text-purple-200">
          <time datetime={post.pubDate}>
            {new Date(post.pubDate).toLocaleDateString('it-IT', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        {post.heroImage && (
          <img 
            src={urlFor(post.heroImage).width(1200).url()} 
            alt={post.heroImage.alt || post.title}
            class="w-full rounded-lg mb-8 shadow-lg"
          />
        )}
        <div class="prose prose-lg max-w-none" set:html={contentHtml}>
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-800">
          Altri Articoli
        </h2>
        <p class="text-xl text-gray-600 mb-8">
          Scopri altri articoli interessanti sul nostro blog.
        </p>
        <a href="/blog" class="bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
          Vedi Tutti gli Articoli
        </a>
      </div>
    </div>
  </section>
</Layout>
