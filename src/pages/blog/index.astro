---
import Layout from '../../layouts/Layout.astro';
import { client, urlFor } from '../../lib/sanity';
import type { Post } from '../../lib/sanity-types';

export const prerender = true;

const posts = await client.fetch<Post[]>(`
  *[_type == "post"] | order(pubDate desc) {
    _id,
    title,
    description,
    pubDate,
    heroImage,
    "slug": slug.current
  }
`);

// Debug: log per verificare quanti post vengono recuperati
console.log('üîç Posts recuperati da Sanity:', posts.length);
console.log('üìù Posts:', JSON.stringify(posts, null, 2));
---

<Layout title="Blog Erasmus - News e Aggiornamenti" description="Scopri le ultime novit√† e aggiornamenti sui progetti Erasmus">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-purple-600 to-purple-800 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Blog Erasmus
      </h1>
      <p class="text-xl text-purple-100">
        News, aggiornamenti e storie di successo dal mondo Erasmus
      </p>
    </div>
  </section>

  <!-- Posts Grid -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      {posts.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-xl text-gray-600 mb-4">Nessuna news pubblicata al momento.</p>
          <p class="text-gray-500">Torna presto per aggiornamenti!</p>
          <p class="text-sm text-gray-400 mt-4">Debug: Posts array length = {posts.length}</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
          <article class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow overflow-hidden">
            {post.heroImage ? (
              <img 
                src={urlFor(post.heroImage).width(600).height(400).url()} 
                alt={post.heroImage.alt || post.title}
                class="h-48 w-full object-cover"
              />
            ) : (
              <div class="h-48 bg-gradient-to-r from-purple-400 to-purple-600 flex items-center justify-center">
                <div class="text-white text-center">
                  <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-2">
                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <p class="text-sm font-semibold">
                    {new Date(post.pubDate).toLocaleDateString('it-IT')}
                  </p>
                </div>
              </div>
            )}
            <div class="p-6">
              <h2 class="text-xl font-semibold mb-3 text-gray-800">
                {post.title}
              </h2>
              <p class="text-gray-600 mb-4">
                {post.description}
              </p>
              <a href={`/blog/${post.slug}`} class="block w-full bg-purple-600 text-white text-center py-2 rounded-lg hover:bg-purple-700 transition-colors">
                Leggi Articolo
              </a>
            </div>
          </article>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-6 text-gray-800">
        Rimani Aggiornato
      </h2>
      <p class="text-xl text-gray-600 mb-8">
        Iscriviti alla nostra newsletter per ricevere le ultime novit√† sui progetti Erasmus.
      </p>
      <div class="max-w-md mx-auto flex gap-2">
        <input type="email" placeholder="La tua email" class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500">
        <button class="bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
          Iscriviti
        </button>
      </div>
    </div>
  </section>
</Layout>
